<!-- Views/Employees/Create.cshtml -->
@model WebApplicationMVC.Models.Employee
@{
    ViewData["Title"] = "Create Employee";
}


<h1>@ViewBag.PageName</h1>

<form asp-action="@ViewBag.Action" Id="create-form">
    @if (@ViewBag.IsEdit)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="form-group col-4">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" id="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label asp-for="Position" class="control-label"></label>
        <input asp-for="Position" id="Position" name="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group col-4">
        <label asp-for="Department" class="control-label"></label>
        <input asp-for="Department" id="Department" name="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div><br/>
    <div class="form-group">
        <input type="submit" value="@ViewBag.Action" class="btn btn-primary" />
    </div>
    <br />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
